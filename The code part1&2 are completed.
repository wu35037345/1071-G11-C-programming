#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main()
{
    int choice,price[4];
    char d[10],n[10];
    printf("Welcome to the Tamkang Yi Restaurant\n");
    printf("Menu\n");
    printf("1.Italian pasta\n");
    printf("2.drink\n");
    printf("3.I have ordered the menu, I settle accounts.\n");
    printf("->");
    scanf("%d",&choice);
    getchar();
    while(choice!=3)
    {
        switch(choice)
        {
        case 1:
            printf("Italian pasta\n"
                   "1.Unexpected Italian pasta 50 dollars\n"
                   "2.Bacon Italian pasta 70 dollars\n"
                   "3.Beef Italian pasta 80 dollars\n"
                   "4.Shrimp Italian pasta 90 dollars\n->");
            gets(d);
            for(int i=0; i<=strlen(d); i++)
            {
                if(d[i]==' ')
                {
                    for(int j=i; j<9-i; j++)
                    {
                        d[j]=d[j+1];
                    }
                }
                if(d[i]>'4')
                    d[i]=' ';
            }

            printf("How many do ");
            for(int i=0; i<strlen(d); i++)
            {
                if(d[i]=='1')
                    printf("Unexpected Italian pasta ");
                if(d[i]=='2')
                    printf("Bacon Italian pasta ");
                if(d[i]=='3')
                    printf("Beef Italian pasta ");
                if(d[i]=='4')
                    printf("Shrimp Italian pasta ");
                if(i!=strlen(d)-1)
                    printf("and ");
            }
            printf("have?\n->");

            gets(n);
            for(int i=0; i<=strlen(n); i++)
            {
                if(n[i]==' ')
                {
                    for(int j=i; j<9-i; j++)
                    {
                        n[j]=n[j+1];
                    }
                }

            }
            for(int i=0; i<4; i++)
            {
                if(d[i]=='1')
                {
                    price[i]=50*(n[i]-48);
                    printf("Unexpected Italian pasta %c shares %d dollars.\n",n[i],price[i]);
                }
                if(d[i]=='2')
                {
                    price[i]=70*(n[i]-48);
                    printf("Bacon Italian pasta %c shares %d dollars.\n",n[i],price[i]);
                }
                if(d[i]=='3')
                {
                    price[i]=80*(n[i]-48);
                    printf("Beef Italian pasta %c shares %d dollars.\n",n[i],price[i]);
                }
                if(d[i]=='4')
                {
                    price[i]=90*(n[i]-48);
                    printf("Shrimp Italian pasta %c shares %d dollars.\n",n[i],price[i]);
                }
            }
        case 2:
            printf("drink\n"
                   "1.Bubble water 10 dollars\n"
                   "2.Sprite 30 dollars\n"
                   "3.Cola 40 dollars\n"
                   "4.Tea 60 dollars\n->");
            gets(d);
            for(int i=0; i<=strlen(d); i++)
            {
                if(d[i]==' ')
                {
                    for(int j=i; j<9-i; j++)
                    {
                        d[j]=d[j+1];
                    }
                }
                if(d[i]>'4')
                    d[i]=' ';
            }

            printf("How many do ");
            for(int i=0; i<strlen(d); i++)
            {
                if(d[i]=='1')
                    printf("Bubble water ");
                if(d[i]=='2')
                    printf("Sprite ");
                if(d[i]=='3')
                    printf("Cola ");
                if(d[i]=='4')
                    printf("Tea");
                if(i!=strlen(d)-1)
                    printf("and ");
            }
            printf("have?\n->");

            gets(n);
            for(int i=0; i<=strlen(n); i++)
            {
                if(n[i]==' ')
                {
                    for(int j=i; j<9-i; j++)
                    {
                        n[j]=n[j+1];
                    }
                }

            }
            for(int i=0; i<4; i++)
            {
                if(d[i]=='1')
                {
                    price[i]=10*(n[i]-48);
                    printf("Bubble water %c shares %d dollars.\n",n[i],price[i]);
                }
                if(d[i]=='2')
                {
                    price[i]=30*(n[i]-48);
                    printf("Sprite %c shares %d dollars.\n",n[i],price[i]);
                }
                if(d[i]=='3')
                {
                    price[i]=40*(n[i]-48);
                    printf("Cola %c shares %d dollars.\n",n[i],price[i]);
                }
                if(d[i]=='4')
                {
                    price[i]=60*(n[i]-48);
                    printf("Tea %c shares %d dollars.\n",n[i],price[i]);
                }
            }
        }
        printf("Menu\n");
        printf("1.Italian pasta\n");
        printf("2.drink\n");
        printf("3.I have ordered the menu, I settle accounts.\n");
        printf("->");
        scanf("%d",&choice);
        getchar();
    }
    return 0;
}
